      <ref name="para"/>
    </element>
    <element name="article">
      <attribute name="number">
        <value>29</value>
      </attribute>
      <ref name="title"/>
      <ref name="three-clauses"/>
    </element>
    <element name="article">
      <attribute name="number">
        <value>30</value>
      </attribute>
      <ref name="title"/>
      <ref name="para"/>
    </element>
  </define>
  <define name="two-clauses">
    <element name="orderedlist">
      <element name="listitem">
        <optional>
          <attribute name="tag"/>
        </optional>
        <ref name="para"/>
      </element>
      <element name="listitem">
        <optional>
          <attribute name="tag"/>
        </optional>
        <ref name="para"/>
      </element>
    </element>
  </define>
  <define name="three-clauses">
    <element name="orderedlist">
      <element name="listitem">
        <optional>
          <attribute name="tag"/>
        </optional>
        <ref name="para"/>
      </element>
      <element name="listitem">
        <optional>
          <attribute name="tag"/>
        </optional>
        <ref name="para"/>
      </element>
      <element name="listitem">
        <optional>
          <attribute name="tag"/>
        </optional>
        <ref name="para"/>
      </element>
    </element>
  </define>
  <define name="four-clauses">
    <element name="orderedlist">
      <element name="listitem">
        <optional>
          <attribute name="tag"/>
        </optional>
        <ref name="para"/>
      </element>
      <element name="listitem">
        <optional>
          <attribute name="tag"/>
        </optional>
        <ref name="para"/>
      </element>
      <element name="listitem">
        <optional>
          <attribute name="tag"/>
        </optional>
        <ref name="para"/>
      </element>
      <element name="listitem">
        <optional>
          <attribute name="tag"/>
        </optional>
        <ref name="para"/>
      </element>
    </element>
  </define>
  <define name="para">
    <element name="para">
      <text/>
    </element>
  </define>
</grammar>
